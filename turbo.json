{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "PORT",
        "OPENAI_API_KEY",
        "REDIS_HOST",
        "REDIS_PORT",
        "JOB_PROCESS_DELAY",
        "DATABASE_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "NODE_ENV"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "dist/**"
            ]
        },
        "lint": {},
        "test": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        },
        "db:migrate": {
            "cache": false
        }
    }
}