datasource db {
  provider = "postgresql"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String?
  name          String?
  jobGroups     JobGroup[]
  createdAt     DateTime  @default(now())
}

model JobGroup {
  id        String   @id @default(uuid())
  a         Float
  b         Float
  createdAt DateTime @default(now())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  jobs      Job[]
}

model Job {
  id            String   @id @default(uuid())
  type          String
  status        String
  result        Float?
  resultInsight String?
  jobGroupId    String
  jobGroup      JobGroup @relation(fields: [jobGroupId], references: [id])
}
